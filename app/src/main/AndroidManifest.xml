<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.bkhezry.demo">

    <application
        android:name="com.github.bkhezry.demo.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.github.bkhezry.demo.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.bkhezry.extrawebview.ItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.github.bkhezry.demo.AboutActivity"
            android:label="@string/action_about"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>